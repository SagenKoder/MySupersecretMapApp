<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateBuildingActivity"
    tools:showIn="@layout/activity_create_building"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/standard_23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Navn pÃ¥ bygg" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="SG29"
        android:text=""
        android:backgroundTint="@color/colorPrimary" />

    <TextView
        android:layout_marginTop="@dimen/standard_23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Posisjon (Latitude)" />

    <EditText
        android:id="@+id/location_field_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=""
        android:backgroundTint="@color/colorPrimary"
        android:enabled="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Posisjon (Longitude)" />

    <EditText
        android:id="@+id/location_field_lng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=""
        android:backgroundTint="@color/colorPrimary"
        android:enabled="false" />

</LinearLayout>
